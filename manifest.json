{
    "manifest_version": 3,
    "name": "Deepfake Detector for YouTube",
    "version": "1.0",
    "description": "Detects deepfake videos on YouTube.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "downloads"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.facebook.com/*",
          "*://*.tiktok.com/*",
          "*://*.youtube.com/*"
        ],
        "js": ["contentScript.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}
  
